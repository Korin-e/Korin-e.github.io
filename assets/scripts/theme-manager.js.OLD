var root = $(':root').get(0).style;

var borderColor = '';
var backColor = '';
var primaryColor = '';
var secondaryColor = '';
var secondaryColorHover = '';
var shadowColor = '';
var headerTextColor = '';
var textColor = '';
var wallpaper = "";
var iconStyle = '';

function SetThemeDark() {
    borderColor = '#8D8DA7';
    backColor = '#252528';
    primaryColor = '#BFCAD7';
    secondaryColor = '#404045';
    secondaryColorHover = '#40404560';
    shadowColor = '#15152099';
    headerTextColor = 'black';
    textColor = 'white';
    wallpaper = "background-dark.png";
    iconStyle = '-dark';

    UpdateTheme();
}

function SetThemeLight() {
    borderColor = '#ffffff';
    backColor = '#d1ffec';
    primaryColor = '#59BA8C';
    secondaryColor = '#9fe3c3';
    secondaryColorHover = '#9fe3c360';
    shadowColor = '#25253880';
    headerTextColor = 'white';
    textColor = 'black';
    wallpaper = "background-light.png"
    iconStyle = '';
    
    UpdateTheme();
}

function UpdateTheme() {
    root.setProperty('--border-color', borderColor);
    root.setProperty('--back-color', backColor);
    root.setProperty('--primary-color', primaryColor);
    root.setProperty('--secondary-color', secondaryColor);
    root.setProperty('--secondary-color-hover', secondaryColorHover);
    root.setProperty('--shadow-color', shadowColor);
    root.setProperty('--header-text-color', headerTextColor);
    root.setProperty('--text-color', textColor);
    root.setProperty('--wallpaper', "url('../images/"+wallpaper+"')");
}